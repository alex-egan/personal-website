---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About">
    <main>
        <div class="content">
            <h1>About</h1>
        </div>
    </main>
</Layout>

<style>
    main {
        padding: 1rem;
        width: 90%;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }
    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }
    .content {
        margin: auto;
    }
</style>