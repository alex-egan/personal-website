---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About">
    <main class="flex flex-col items-center p-1 h-full w-full text-white">
        <div class="header-card bg-cover bg-center flex flex-col items-center w-screen h-screen align-self-start">
            <h1 class="text-gradient">About</h1>
        </div>
    </main>
</Layout>

<style>
    main {
		font-size: 20px;
		line-height: 1.6;
		overflow-y: auto;
		overflow-x: hidden;
	}
    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }
    .content {
        margin: auto;
    }
</style>