---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About">
    <main>
        <div class="header-card bg-cover bg-center flex flex-col w-screen h-screen align-self-start">
            <h1 class="text-gradient"></h1>
        </div>
    </main>
</Layout>

<style>
    main {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding-left: 1rem;
		padding-right: 1rem;
		height: 100%;
		width: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
		overflow-y: auto;
		overflow-x: hidden;
	}
    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }
    .content {
        margin: auto;
    }
</style>