---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import MainImage from '../images/alex-and-chuck.jpeg';
---

<Layout title="Home">
	<main>
		<div class="heading-primary header-card bg-cover bg-center items-center text-center flex flex-col w-screen h-screen">
			<div class="heading-primary__main">
				<h1 class="text-3xl m-4">Welcome to <span class="text-gradient">Alex's Website</span></h1>
			</div>
			<div class="heading-primary__sub">
				<p class="text-3xl text-white">Oh Shit Playa!</p>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding-left: 1rem;
		padding-right: 1rem;
		height: 100%;
		width: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
		overflow-y: auto;
		overflow-x: hidden;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		margin: 0 auto 0 auto;
		margin-bottom: 1rem;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	.img {
		object-fit: contain;
		height: 100%;
		width: 100%;
	}

	.heading-primary__sub {
		margin-left: auto;
		margin-right: auto;
		animation-name: slideInRight;
		animation-delay: 0.5s;
		animation-duration: 2s;
		backface-visibility: hidden;
		animation-fill-mode: backwards;
	}

	.heading-primary__main {

		animation-name: slideInLeft;
		animation-duration: 2s;
	}

	@keyframes slideInLeft {
		0% {
			opacity: 0;
			transform: translate(-100%);
		}
		70% {
			transform: translate(5%);
		}
		100% {
			opacity: 1;
			transform: translate(0);
		}
	}

	@keyframes slideInRight {
		0% {
			opacity: 0;
			transform: translate(100%);
		}
		70% {
			transform: translate(-5%);
		}
		100% {
			opacity: 1;
			transform: translate(0);
		}
	}
</style>
